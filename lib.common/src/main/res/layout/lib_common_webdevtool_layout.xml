<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <!--菜单-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/lib_common_devtool_background_grey"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:showDividers="middle">

        <TextView
            android:id="@+id/tvLog"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/lib_common_devtool_color_selector"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="日志"
            android:textColor="@drawable/lib_common_devtool_txt_selector" />

        <TextView
            android:id="@+id/tvSources"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/lib_common_devtool_color_selector"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="资源记录"
            android:textColor="@drawable/lib_common_devtool_txt_selector" />

        <TextView
            android:id="@+id/tvInfo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/lib_common_devtool_color_selector"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="当前信息"
            android:textColor="@drawable/lib_common_devtool_txt_selector" />

        <TextView
            android:id="@+id/tvShortcuts"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/lib_common_devtool_color_selector"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="快捷操作"
            android:textColor="@drawable/lib_common_devtool_txt_selector" />

        <TextView
            android:id="@+id/tvHtml"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/lib_common_devtool_color_selector"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="html源码"
            android:textColor="@drawable/lib_common_devtool_txt_selector" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#bdbdbd" />

    <!--content-->
    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!--buttom content-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <Button
            android:id="@+id/btnClearData"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="清除当前页面记录" />

        <Button
            android:id="@+id/btnExit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="退出" />
    </LinearLayout>
</LinearLayout>
